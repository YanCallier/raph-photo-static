---
/* Layout global du site */
import "./layout.css";
const { title = "Raphaelle Brui", bodyClass = "" } = Astro.props;

// series fetch
const series = Object.values(
  import.meta.glob("../../content/series/*.md", { eager: true })
);
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <script type="module" src="/scripts/globalScript.js"></script>
    <title>{title}</title>

    <style>


    </style>
  </head>

  <body class={bodyClass}>

    <!-- HEADER GLOBAL -->
    <header class="site-header">
      <div class="brand"><a href="/">Raphaelle Brui<a/></div>

      <button class="nav-toggle" type="button" aria-label="Menu" aria-expanded="false">
    <span></span><span></span><span></span>
  </button>

      <nav data-nav>

        {series.map(serie => (
          <a href={`/${serie.frontmatter.slug}/`}>
            {serie.frontmatter.title}
          </a>
        ))}

        
      </nav>
    </header>

    <div class="global-container">
    <slot />
    </div>

    <footer>
        <nav>
          <a href="/bio/">Bio</a>
          <a href="/contact/">Contact</a>
    <a
      href="https://revelles.fr/photographe/raphaelle-brui"
      target="_blank"
      rel="noopener noreferrer"
    >
      Boutique
    </a>
    <a
      href="http://www.agence-lepictorium.com"
      target="_blank"
      rel="noopener noreferrer"
    >
      Agence
    </a>
  </nav>
    </footer>
    <script type="module" src="/scripts/nav.js"></script>
  </body>
</html>
