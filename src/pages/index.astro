---
import { Astro } from "astro";

// Charger les séries pour le menu
const series = await Astro.glob("content/series/*.md");

// Récupérer toutes les images
let allImages = [];
for (const serie of series) {
  const imgs = serie.frontmatter.images || [];
  allImages.push(...imgs.map(i => i.url));
}

// Image aléatoire
const hero = allImages.length
  ? allImages[Math.floor(Math.random() * allImages.length)]
  : null;
---
<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>Raphaelle Brui</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <style>
      body {
        margin: 0;
        background: #000;
        color: #fff;
        font-family: system-ui, sans-serif;
      }

      header {
        position: absolute;
        top: 0;
        width: 100%;
        padding: 1.2rem 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        background: rgba(0,0,0,0.4);
        z-index: 10;
      }

      .brand {
        font-size: 1.8rem;
        font-weight: 600;
        letter-spacing: 0.05em;
      }

      nav a {
        margin-left: 1.8rem;
        color: white;
        text-decoration: none;
        font-size: 1rem;
      }

      nav a:hover {
        opacity: 0.6;
      }

      .hero {
        width: 100%;
        height: 100vh;
        position: relative;
      }

      .hero img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
    </style>
  </head>

  <body>

    <!-- HEADER -->
    <header>
      <div class="brand">Raphaelle Brui</div>
      <nav>
        <a href="/">Accueil</a>
        {series.map(s => (
          <a href={`/series/${s.frontmatter.slug}/`}>
            {s.frontmatter.title}
          </a>
        ))}
        <a href="/contact/">Contact</a>
      </nav>
    </header>

    <!-- HERO IMAGE -->
    <main class="hero">
      {hero && <img src={hero} alt="" />}
    </main>

    <!-- NETLIFY IDENTITY (INDISPENSABLE) -->
    <script
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"
      defer
    ></script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const hash = window.location.hash || "";
        const hasToken =
          hash.includes("recovery_token") ||
          hash.includes("invite_token") ||
          hash.includes("confirmation_token");

        if (hasToken && window.netlifyIdentity) {
          window.netlifyIdentity.init();
        }
      });
    </script>

  </body>
</html>
