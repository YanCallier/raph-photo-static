---
/* CSS */
import "../styles/home.css";

/* Séries */
const modules = import.meta.glob("../../content/series/*.md", { eager: true });
const series = Object.values(modules);

/* Images enrichies */
const images = [];

for (const serie of series) {
  const imgs = serie.frontmatter?.images || [];
  for (const img of imgs) {
    images.push({
      ...img,
      serieSlug: serie.frontmatter.slug,
    });
  }
}

/* Image aléatoire */
const image = images.length
  ? images[Math.floor(Math.random() * images.length)]
  : null;

/* Teaser */
const teaser =
  image?.description && image.description.length > 120
    ? image.description.slice(0, 120) + "…"
    : image?.description ?? "";

---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>Raphaelle Brui</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>

    <!-- HEADER -->
    <header>
      <div class="brand">Raphaelle Brui</div>
      <nav>
        <a href="/">Accueil</a>
        {series.map(s => (
          <a href={`/series/${s.frontmatter.slug}/`}>
            {s.frontmatter.title}
          </a>
        ))}
        <a href="/contact/">Contact</a>
      </nav>
    </header>

    <!-- HERO IMAGE -->
<main class="hero">
  {image && (
    <>
      <img src={image.url} alt={image.title} />

      <div class="overlay">
        <h2>{image.title}</h2>
        <p>{teaser}</p>
        <a href={`/series/${image.serieSlug}/`}>
          Voir la série →
        </a>
      </div>
    </>
  )}
</main>


    <!-- NETLIFY IDENTITY (INDISPENSABLE) -->
    <script
      src="https://identity.netlify.com/v1/netlify-identity-widget.js"
      defer
    ></script>

    <script>
      document.addEventListener("DOMContentLoaded", () => {
        const hash = window.location.hash || "";
        const hasToken =
          hash.includes("recovery_token") ||
          hash.includes("invite_token") ||
          hash.includes("confirmation_token");

        if (hasToken && window.netlifyIdentity) {
          window.netlifyIdentity.init();
        }
      });
    </script>

    <!-- JS home -->
    <script type="module">
      import "../scripts/home.js";
    </script>

  </body>
</html>
