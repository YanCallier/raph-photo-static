---
export async function getStaticPaths() {
  const allSeries = Object.values(
    import.meta.glob("../../../content/series/*.md", { eager: true })
  );

  return allSeries.map((serie) => ({
    params: {
      slug: serie.frontmatter.slug,
    },
    props: {
      serie,
      allSeries,
    },
  }));
}

const { serie, allSeries } = Astro.props;

const { title, images } = serie.frontmatter;
const Content = serie.Content;
---

<!DOCTYPE html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <title>{title} – Raphaelle Brui</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Réutilise le CSS global (home) -->
    <link rel="stylesheet" href="/styles/home.css" />
  </head>

  <body>

    <!-- HEADER GLOBAL (identique à la home) -->
    <header>
      <div class="brand">Raphaelle Brui</div>
<nav>
  <a href="/">Accueil</a>

  {allSeries.map((s) => (
    <a href={`/series/${s.frontmatter.slug}/`}>
      {s.frontmatter.title}
    </a>
  ))}

  <a href="/contact/">Contact</a>
</nav>

    </header>

    <!-- CONTENU DE LA SÉRIE -->
<main class="series">

  <header class="series-header">
    <h1>{title}</h1>
    <div class="series-text">
      <Content />
    </div>
  </header>

  <section class="series-images">
    {images.map((image) => (
      <figure>
        <img src={image.url} alt={image.title || ""} />
        <figcaption>
          {image.title && <strong>{image.title}</strong>}
          {image.caption && <p>{image.caption}</p>}
        </figcaption>
      </figure>
    ))}
  </section>

</main>


  </body>
</html>
